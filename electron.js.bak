// Webview'dan gelen UYAP verilerini karşıla ve ana pencereye ilet
ipcMain.on('uyap-data', (event, data) => {
    // console.log('Main Process: UYAP verisi alındı, Renderer\'a iletiliyor...');
    if (mainWindow) {
        mainWindow.webContents.send('uyap-data-captured', data);
    }
});

